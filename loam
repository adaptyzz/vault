-- Premium ROBLOX GUI with Adopt Me Hub & Pet Spawner
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "PremiumHub"
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.ResetOnSpawn = false

-- Main Frame (Container)
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Size = UDim2.new(0, 450, 0, 420)
MainFrame.BackgroundColor3 = Color3.fromRGB(8, 8, 12)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.ClipsDescendants = false

-- Add corner radius
local MainCorner = Instance.new("UICorner")
MainCorner.CornerRadius = UDim.new(0, 20)
MainCorner.Parent = MainFrame

-- Animated gradient background
local BackgroundGradient = Instance.new("UIGradient")
BackgroundGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(15, 15, 20)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(8, 8, 12)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(12, 8, 15))
}
BackgroundGradient.Rotation = 45
BackgroundGradient.Parent = MainFrame

-- Animated gradient rotation
spawn(function()
    while MainFrame.Parent do
        for i = 0, 360, 1 do
            if not MainFrame.Parent then break end
            BackgroundGradient.Rotation = i
            wait(0.05)
        end
    end
end)

-- Premium border with gradient
local Border = Instance.new("UIStroke")
Border.Color = Color3.fromRGB(80, 80, 100)
Border.Thickness = 1.5
Border.Transparency = 0.3
Border.Parent = MainFrame

local BorderGradient = Instance.new("UIGradient")
BorderGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(100, 80, 150)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(80, 100, 180)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(100, 80, 150))
}
BorderGradient.Rotation = 0
BorderGradient.Parent = Border

-- Animate border gradient
spawn(function()
    while Border.Parent do
        for i = 0, 360, 2 do
            if not Border.Parent then break end
            BorderGradient.Rotation = i
            wait(0.03)
        end
    end
end)

