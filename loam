-- Button Container
local ButtonContainer = Instance.new("Frame")
ButtonContainer.Name = "ButtonContainer"
ButtonContainer.Parent = MainFrame
ButtonContainer.Position = UDim2.new(0, 0, 0, 70)
ButtonContainer.Size = UDim2.new(1, 0, 1, -85)
ButtonContainer.BackgroundTransparency = 1

local ButtonLayout = Instance.new("UIListLayout")
ButtonLayout.Parent = ButtonContainer
ButtonLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
ButtonLayout.VerticalAlignment = Enum.VerticalAlignment.Center
ButtonLayout.Padding = UDim.new(0, 15)
ButtonLayout.SortOrder = Enum.SortOrder.LayoutOrder

-- Function to create premium button
local function createButton(name, text, icon, order)
    local Button = Instance.new("TextButton")
    Button.Name = name
    Button.Parent = ButtonContainer
    Button.Size = UDim2.new(0, 400, 0, 65)
    Button.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
    Button.Text = ""
    Button.BorderSizePixel = 0
    Button.LayoutOrder = order
    Button.AutoButtonColor = false
    Button.ClipsDescendants = true
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 12)
    ButtonCorner.Parent = Button
    
    -- Button gradient overlay
    local ButtonGradient = Instance.new("UIGradient")
    ButtonGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(20, 18, 28)),
        ColorSequenceKeypoint.new(0.5, Color3.fromRGB(15, 15, 20)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(18, 15, 25))
    }
    ButtonGradient.Rotation = 90
    ButtonGradient.Parent = Button
    
    -- Button border with gradient
    local ButtonBorder = Instance.new("UIStroke")
    ButtonBorder.Color = Color3.fromRGB(60, 60, 80)
    ButtonBorder.Thickness = 1.5
    ButtonBorder.Transparency = 0.5
    ButtonBorder.Parent = Button
    
    local BorderGrad = Instance.new("UIGradient")
    BorderGrad.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(80, 60, 120)),
        ColorSequenceKeypoint.new(0.5, Color3.fromRGB(100, 80, 150)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(80, 60, 120))
    }
    BorderGrad.Parent = ButtonBorder
    
    -- Shine effect overlay
    local Shine = Instance.new("Frame")
    Shine.Name = "Shine"
    Shine.Parent = Button
    Shine.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Shine.BackgroundTransparency = 0.95
    Shine.BorderSizePixel = 0
    Shine.Size = UDim2.new(0.3, 0, 2, 0)
    Shine.Position = UDim2.new(-0.3, 0, -0.5, 0)
    Shine.Rotation = 20
    
    -- Icon container
    local IconContainer = Instance.new("Frame")
    IconContainer.Parent = Button
    IconContainer.Position = UDim2.new(0, 20, 0.5, 0)
    IconContainer.AnchorPoint = Vector2.new(0, 0.5)
    IconContainer.Size = UDim2.new(0, 45, 0, 45)
    IconContainer.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
    IconContainer.BorderSizePixel = 0
    
    local IconCorner = Instance.new("UICorner")
    IconCorner.CornerRadius = UDim.new(0, 10)
    IconCorner.Parent = IconContainer
    
    local IconGrad = Instance.new("UIGradient")
    IconGrad.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(80, 60, 140)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(60, 80, 160))
    }
    IconGrad.Rotation = 45
    IconGrad.Parent = IconContainer
    
    -- Icon text
    local Icon = Instance.new("TextLabel")
    Icon.Parent = IconContainer
    Icon.Size = UDim2.new(1, 0, 1, 0)
    Icon.BackgroundTransparency = 1
    Icon.Text = icon
    Icon.TextColor3 = Color3.fromRGB(255, 255, 255)
    Icon.TextSize = 24
    Icon.Font = Enum.Font.SourceSansBold
    
    -- Button text
    local ButtonText = Instance.new("TextLabel")
    ButtonText.Parent = Button
    ButtonText.Size = UDim2.new(1, -140, 1, 0)
    ButtonText.Position = UDim2.new(0, 75, 0, 0)
    ButtonText.BackgroundTransparency = 1
    ButtonText.Text = text
    ButtonText.TextColor3 = Color3.fromRGB(230, 230, 240)
    ButtonText.TextSize = 16
    ButtonText.Font = Enum.Font.SourceSansSemibold
    ButtonText.TextXAlignment = Enum.TextXAlignment.Left
    
    -- Arrow indicator
    local Arrow = Instance.new("TextLabel")
    Arrow.Parent = Button
    Arrow.AnchorPoint = Vector2.new(1, 0.5)
    Arrow.Position = UDim2.new(1, -20, 0.5, 0)
    Arrow.Size = UDim2.new(0, 30, 0, 30)
    Arrow.BackgroundTransparency = 1
    Arrow.Text = "‚Üí"
    Arrow.TextColor3 = Color3.fromRGB(150, 150, 170)
    Arrow.TextSize = 22
    Arrow.Font = Enum.Font.SourceSansBold
    
    return Button, ButtonBorder, ButtonText, Arrow, Shine, IconContainer
end

-- Create buttons
local AdoptMeButton, AdoptMeBorder, AdoptMeText, AdoptMeArrow, AdoptMeShine, AdoptMeIcon = createButton("AdoptMeHub", "Adopt Me Hub", "üè†", 1)
local PetSpawnerButton, PetSpawnerBorder, PetSpawnerText, PetSpawnerArrow, PetSpawnerShine, PetSpawnerIcon = createButton("PetSpawner", "Pet Spawner", "üêæ", 2)
local TradeFreezeButton, TradeFreezeBorder, TradeFreezeText, TradeFreezeArrow, TradeFreezeShine, TradeFreezeIcon = createButton("TradeFreeze", "Trade Freeze", "üîí", 3)
local AdoptUtilsButton, AdoptUtilsBorder, AdoptUtilsText, AdoptUtilsArrow, AdoptUtilsShine, AdoptUtilsIcon = createButton("AdoptUtils", "Adopt Me Utilities", "‚öôÔ∏è", 4)

-- Animation tweens
local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local fastTween = TweenInfo.new(0.15, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)

-- Hover effects
local function addHoverEffect(button, border, text, arrow, shine, iconContainer)
    button.MouseEnter:Connect(function()
        TweenService:Create(button, tweenInfo, {BackgroundColor3 = Color3.fromRGB(20, 20, 28)}):Play()
        TweenService:Create(border, tweenInfo, {Transparency = 0.2}):Play()
        TweenService:Create(text, tweenInfo, {TextColor3 = Color3.fromRGB(255, 255, 255)}):Play()
        TweenService:Create(arrow, tweenInfo, {
            TextColor3 = Color3.fromRGB(255, 255, 255),
            Position = UDim2.new(1, -15, 0.5, 0)
        }):Play()
        TweenService:Create(iconContainer, tweenInfo, {BackgroundColor3 = Color3.fromRGB(35, 35, 50)}):Play()
        
        -- Shine animation
        TweenService:Create(shine, TweenInfo.new(0.6, Enum.EasingStyle.Linear), {
            Position = UDim2.new(1.3, 0, -0.5, 0)
        }):Play()
    end)
    
    button.MouseLeave:Connect(function()
        TweenService:Create(button, tweenInfo, {BackgroundColor3 = Color3.fromRGB(15, 15, 20)}):Play()
        TweenService:Create(border, tweenInfo, {Transparency = 0.5}):Play()
        TweenService:Create(text, tweenInfo, {TextColor3 = Color3.fromRGB(230, 230, 240)}):Play()
        TweenService:Create(arrow, tweenInfo, {
            TextColor3 = Color3.fromRGB(150, 150, 170),
            Position = UDim2.new(1, -20, 0.5, 0)
        }):Play()
        TweenService:Create(iconContainer, tweenInfo, {BackgroundColor3 = Color3.fromRGB(25, 25, 35)}):Play()
        
        -- Reset shine
        shine.Position = UDim2.new(-0.3, 0, -0.5, 0)
    end)
end

addHoverEffect(AdoptMeButton, AdoptMeBorder, AdoptMeText, AdoptMeArrow, AdoptMeShine, AdoptMeIcon)
addHoverEffect(PetSpawnerButton, PetSpawnerBorder, PetSpawnerText, PetSpawnerArrow, PetSpawnerShine, PetSpawnerIcon)
addHoverEffect(TradeFreezeButton, TradeFreezeBorder, TradeFreezeText, TradeFreezeArrow, TradeFreezeShine, TradeFreezeIcon)
addHoverEffect(AdoptUtilsButton, AdoptUtilsBorder, AdoptUtilsText, AdoptUtilsArrow, AdoptUtilsShine, AdoptUtilsIcon)

-- Button click effects
local function addClickEffect(button)
    button.MouseButton1Click:Connect(function()
        TweenService:Create(button, fastTween, {Size = UDim2.new(0, 395, 0, 62)}):Play()
        wait(0.1)
        TweenService:Create(button, fastTween, {Size = UDim2.new(0, 400, 0, 65)}):Play()
    end)
end

addClickEffect(AdoptMeButton)
addClickEffect(PetSpawnerButton)
addClickEffect(TradeFreezeButton)
addClickEffect(AdoptUtilsButton)

-- Close button functionality
CloseButton.MouseButton1Click:Connect(function()
    TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
        Size = UDim2.new(0, 0, 0, 0),
        Rotation = -45
    }):Play()
    wait(0.3)
    ScreenGui:Destroy()
end)

-- Close button hover
CloseButton.MouseEnter:Connect(function()
    TweenService:Create(CloseButton, tweenInfo, {
        BackgroundColor3 = Color3.fromRGB(180, 50, 50)
    }):Play()
    TweenService:Create(CloseButton, tweenInfo, {TextColor3 = Color3.fromRGB(255, 255, 255)}):Play()
    TweenService:Create(CloseBorder, tweenInfo, {Transparency = 0}):Play()
end)

CloseButton.MouseLeave:Connect(function()
    TweenService:Create(CloseButton, tweenInfo, {
        BackgroundColor3 = Color3.fromRGB(20, 20, 25)
    }):Play()
    TweenService:Create(CloseButton, tweenInfo, {TextColor3 = Color3.fromRGB(200, 200, 200)}):Play()
    TweenService:Create(CloseBorder, tweenInfo, {Transparency = 0.5}):Play()
end)

-- Execute scripts
AdoptMeButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/adaptyzz/vault/refs/heads/main/adoptmehub'))()
end)

PetSpawnerButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/adaptyzz/vault/refs/heads/main/spawner"))()
end)

TradeFreezeButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/adaptyzz/vault/refs/heads/main/tradefreeze"))()
end)

AdoptUtilsButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/adaptyzz/vault/refs/heads/main/adoptutils"))()
end)

